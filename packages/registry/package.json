{
  "name": "@dot-ui/registry",
  "version": "0.1.0",
  "private": true,
  "description": "Registry server and documentation for Polkadot UI components",
  "scripts": {
    "dev": "next dev --turbopack",
    "postinstall": "pnpm papi && pnpm registry:build && pnpm registry:copy",
    "build": "pnpm registry:build && pnpm registry:copy && next build",
    "start": "next start",
    "lint": "next lint",
    "registry:build": "shadcn build",
    "registry:copy": "cp registry.json public/",
    "clean": "rm -rf .next"
  },
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.0",
    "@tanstack/react-query": "^5.81.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.487.0",
    "next": "15.3.1",
    "polkadot-api": "^1.14.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "shadcn": "2.9.0-canary.0",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
