{
  "name": "@dot-ui/registry",
  "version": "0.1.0",
  "private": true,
  "description": "Registry server and documentation for Polkadot UI components",
  "scripts": {
    "dev": "next dev --turbopack",
    "postinstall": "pnpm papi && pnpm registry:build && pnpm registry:copy && fumadocs-mdx",
    "build": "pnpm registry:build && pnpm registry:copy && next build",
    "start": "next start",
    "lint": "next lint",
    "registry:build": "node scripts/build-registries.mjs",
    "registry:copy": "cp registry-papi.json public/ && cp registry-dedot.json public/",
    "clean": "rm -rf .next"
  },
  "dependencies": {
    "@polkadot-api/descriptors": "file:.papi/descriptors",
    "@polkadot/keyring": "^13.5.3",
    "@polkadot/react-identicon": "^3.15.2",
    "@polkadot/util": "^13.5.3",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "@styleglide/theme-editor": "^0.0.15",
    "@tanstack/react-query": "^5.81.5",
    "@types/mdx": "^2.0.13",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dedot": "^0.14.1",
    "ethers": "^6.15.0",
    "fumadocs-core": "^15.6.3",
    "fumadocs-mdx": "^11.6.11",
    "fumadocs-ui": "^15.6.3",
    "lucide-react": "^0.487.0",
    "next": "15.3.1",
    "next-themes": "^0.4.6",
    "polkadot-api": "^1.14.1",
    "posthog-js": "^1.257.0",
    "posthog-node": "^5.5.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "shadcn": "2.9.0-canary.0",
    "tailwind-merge": "^3.2.0",
    "tw-animate-css": "^1.2.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@dedot/chaintypes": "^0.123.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
